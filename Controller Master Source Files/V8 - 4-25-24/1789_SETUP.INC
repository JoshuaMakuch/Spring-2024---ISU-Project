;DEFINE PERSONAL SFR LOCATIONS
;******************************************
	W_SAVE		    EQU 0X20			;REGISTER FOR STORING WORKING REGISTER
	STATUS_SAVE	    EQU 0X21			;REGISTER FOR STORING STATUS REGISTER	
	BTN_REG_1	    EQU 0X22			;REGISTER FOR BUTTON FLAGS (TRIG 1-2, BTN 1-4, JOYBTN 1-2)
	ADC_RESULT	    EQU 0X23			;TEMPORARILY STORES THE ADRESH RESULT FOR ADC CONVERSION	
	TMR_CNT		    EQU 0X24			;REGISTER FOR STORING THE TIMER2 COUNT
	RBT_ADDR	    EQU 0X25			;STORES THE ROBOT ADDRESS ACCORDING TO THE DIP SWITCHES
	JOY1UD		    EQU 0X26			;STORES THE VALUE FOR JOYSTICK 1'S UP/DOWN
	JOY1LR		    EQU 0X27			;STORES THE VALUE FOR JOYSTICK 1'S LEFT/RIGHT
	JOY2UD		    EQU 0X28			;STORES THE VALUE FOR JOYSTICK 2'S UP/DOWN
	JOY2LR		    EQU 0X29			;STORES THE VALUE FOR JOYSTICK 2'S LEFT/RIGHT
	JOY3UD		    EQU 0X2A			;STORES THE VALUE FOR JOYSTICK 3'S UP/DOWN
	JOY3LR		    EQU 0X2B			;STORES THE VALUE FOR JOYSTICK 3'S LEFT/RIGHT
	SHRT_TRM_REG	    EQU 0X2C			;A REGISTER USED TO TEMPORARILY STORE DATA WHEN NEEDED
	BTN_REG_2	    EQU 0X2D			;REGISTER FOR BUTTON FLAGS (JOYBTN 3)
	TX_CHAR		    EQU 0X2E			;TRANSMISSION CHARCTER/COMMAND
	TX_VAR1		    EQU 0X2F			;TRANSMISSION VARIABLE 1
	TX_VAR2		    EQU 0X30			;TRANSMISSION VARIABLE 2
	TX_VAR3		    EQU 0X31			;TRANSMISSION VARAIBLE 3
