	TX_DATA_4CH_VAR1    EQU 0X46			;A TX REGISTER USED TO STORE "LOCK BREAKS(L)" COMMAND VARIABLE 1 DATA
	TX_DATA_50H_VAR1    EQU 0X47			;A TX REGISTER USED TO STORE "PERIPHERAL INTERFACE (P)" COMMAND VARIABLE 1 DATA
	TX_DATA_50H_VAR2    EQU 0X48			;A TX REGISTER USED TO STORE "PERIPHERAL INTERFACE (P)" COMMAND VARIABLE 2 DATA
	TX_DATA_50H_VAR3    EQU 0X49			;A TX REGISTER USED TO STORE "PERIPHERAL INTERFACE (P)" COMMAND VARIABLE 3 DATA
	TX_DATA_43H_VAR1    EQU 0X4A			;A TX REGISTER USED TO STORE "CANNON X-AXIS & Y-AXIS (C)" COMMAND VARIABLE 1 DATA
	TX_DATA_43H_VAR2    EQU 0X4B			;A TX REGISTER USED TO STORE "CANNON X-AXIS & Y-AXIS (C)" COMMAND VARIABLE 2 DATA
	TX_DATA_63H_VAR1    EQU 0X4C			;A TX REGISTER USED TO STORE "CANNON MECHANISM (c)" COMMAND VARIABLE 1 DATA
	TX_DATA_63H_VAR2    EQU 0X4D			;A TX REGISTER USED TO STORE "CANNON MECHANISM (c)" COMMAND VARIABLE 2 DATA
    
	I2C_RX_REG_1	    EQU 0X4E			;A REGISTER USED TO STORE TEMPORARY VALUES FROM AN I2C COMMUNICATION
