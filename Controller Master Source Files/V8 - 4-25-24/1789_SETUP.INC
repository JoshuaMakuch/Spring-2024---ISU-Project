   	I2C_RX_REG_3	    EQU 0X50			;A REGISTER USED TO STORE TEMPORARY VALUES FROM AN I2C COMMUNICATION
	I2C_RX_REG_4	    EQU 0X51			;A REGISTER USED TO STORE TEMPORARY VALUES FROM AN I2C COMMUNICATION
	I2C_RX_REG_5	    EQU 0X52			;A REGISTER USED TO STORE TEMPORARY VALUES FROM AN I2C COMMUNICATION
   
    
