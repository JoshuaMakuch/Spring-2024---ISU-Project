	TX_DATA_42H_VAR1    EQU 0X3E			;A TX REGISTER USED TO STORE "MOVE BACKWARD (B)" COMMAND VARIABLE 1 DATA
	TX_DATA_54H_VAR1    EQU 0X3F			;A TX REGISTER USED TO STORE "TURN (T)" COMMAND VARIABLE 1 DATA
    	TX_DATA_54H_VAR2    EQU 0X40			;A TX REGISTER USED TO STORE "TURN (T)" COMMAND VARIABLE 2 DATA
	TX_DATA_74H_VAR1    EQU 0X41			;A TX REGISTER USED TO STORE "ALTERNATE TURN (t)" COMMAND VARIABLE 1 DATA
	TX_DATA_4DH_VAR1    EQU 0X42			;A TX REGISTER USED TO STORE "MANIPULATOR (M)" COMMAND VARIABLE 1 DATA
    	TX_DATA_4DH_VAR2    EQU 0X43			;A TX REGISTER USED TO STORE "MANIPULATOR (M)" COMMAND VARIABLE 2 DATA
    	TX_DATA_4DH_VAR3    EQU 0X44			;A TX REGISTER USED TO STORE "MANIPULATOR (M)" COMMAND VARIABLE 3 DATA
