	RX_HS		    EQU 0X34			;RECEIVED HANDSHAKE BYTE
	RX_ADDR		    EQU 0x35			;RECEIVED ADDRESS
	RX_CHAR		    EQU 0x36			;RECEIVED CHARACTER
	RX_VAR1		    EQU 0x37			;RECEIVED VARIABLE 1
	RX_VAR2		    EQU 0x38			;RECEIVED VARAIBLE 2
	RX_VAR3		    EQU 0x39			;RECEIVED VARAIBLE 3
	RX_INFO_REG	    EQU 0X3A			;INFORMATION REGISTER USED TO STORE RECEIVING UART FLAGS
	SHRT_TRM_REG_INT    EQU 0X3B			;A REGISTER USED TO TEMPORARILY STORE DATA WHEN IN AN INTERRUPT
	PERI_STATUS	    EQU 0X3C			;A REGISTER USED TO STORE PERIPHERAL COMMUNICATION STATUSES
    
